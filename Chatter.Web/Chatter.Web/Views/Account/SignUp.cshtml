@model SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
<div>
    <h1>Sign up</h1>
</div>

<div>

    <form type="submit" id="registrationForm" asp-action="SignIn">
        <div>
            <label for="UserTag">User Tag</label>
            <div>
                <input id="userTagField" asp-for="UserTag" type="text" placeholder="User Tag" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

         <div>
            <label for="Email">Email</label>
            <div>
                <input id="emailField" asp-for="Email" type="text" placeholder="Email" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

        <div>
            <label for="LastName">Last name</label>
            <div>
                <input id="lastNameField" asp-for="LastName" type="text" placeholder="Last name" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

          <div>
            <label for="FirstName">First name</label>
            <div>
                <input id="firstNameField" asp-for="FirstName" type="text" placeholder="First name" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

        <div>
            <label for="Patronymic">Patronymic</label>
            <div>
                <input id="patronymicField" asp-for="Patronymic" type="text" placeholder="Patronymic" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

        
        <div>
            <label for="UniversityName">University name</label>
            <div>
                <input id="universityNameField" asp-for="UniversityName" type="text" placeholder="Patronymic" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

          <div>
            <label for="UniversityFaculty">University faculty</label>
            <div>
                <input id="universityFacultyField" asp-for="UniversityFaculty" type="text" placeholder="Patronymic" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

        <div>
            <label for ="Password">Password</label>
            <div>
                <input id="passwordField" asp-for="Password" type="password" placeholder="Password" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

          <div>
            <label for="ConfirmPassword">Confirm password</label>
            <div>
                <input id="confirmPasswordField" asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
            </div>
            @if (Model != null)
            {
                <small>Wrong login or password.</small>
            }
        </div>

        <button id="registerButton" asp-controller="Account" asp-action="signUp" type="submit">
            Sign Up</button>
        <button onclick="window.location.href='/'">Cancel</button>
    </form>
</div>
<script src="~/js/registrationvalidation.js"></script>